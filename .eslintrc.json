{
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "document": false
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "react/jsx-indent": [
      1,
      2
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-props-no-spreading": [
      0
    ],
    "react/prop-types": [
      0
    ]
  }
}